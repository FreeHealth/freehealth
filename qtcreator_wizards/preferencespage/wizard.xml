 <wizard version="1" kind="class" id="A.PreferencesPage" category="B.FMFClasses">
    <displayname>Settings Page</displayname>
    <displayname xml:lang="de">Einstellungen-Seite</displayname>
    <icon>../shared/preferences-system.png</icon>
    <description>Creates a class for a FreeMedForms preferences page. Choose this template if you already have created a plugin.</description>
    <description xml:lang="de">Erstellt eine Klasse für eine FreeMedForms-Einstellungen-Seite. Wählen Sie diese Vorlage, wenn Sie bereits ein Plugin erstellt haben.</description>
    <displaycategory>FreeMedForms</displaycategory>
    <files>
        <file source="preferences.cpp" target="%PluginName:l%preferences.%CppSourceSuffix%" openeditor="true"/>
        <file source="preferences.h" target="%PluginName:l%preferences.%CppHeaderSuffix%" openeditor="true"/>
        <file source="preferences.ui" target="%PluginName:l%preferences.ui" openeditor="true"/> 
    </files>
    <!-- Create a 2nd wizard page with parameters -->
    <fieldpagetitle>Settings Page Parameters</fieldpagetitle>
    <fieldpagetitle xml:lang="de">Parameter für Einstellungen-Seite</fieldpagetitle>
    <fields>
        <field name="PluginName">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="" />
            <fielddescription>Plugin name (without "plugin"):</fielddescription>
            <fielddescription xml:lang="de">Name des Plugins, zu dem diese Einstellungen gehören (ohne "plugin"):</fielddescription>
        </field>
        <field name="Author">
            <fieldcontrol class="QLineEdit" defaulttext="" />
            <fielddescription>Author:</fielddescription>
            <fielddescription xml:lang="de">Autor:</fielddescription>
        </field>
        <field name="AuthorEmail">
            <fieldcontrol class="QLineEdit" validator="^[a-z0-9_.@]?$" defaulttext="" />
            <fielddescription>Author email:</fielddescription>
            <fielddescription xml:lang="de">Emailadresse des Autors:</fielddescription>
        </field>
        <!--
